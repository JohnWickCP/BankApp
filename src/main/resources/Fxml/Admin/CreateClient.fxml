<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="create_client_container"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CHBank.Controller.Admin.CreateClientController">
    <Text layoutX="24.0" layoutY="41.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create New Client  Account"
          AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0"/>
    <VBox fillWidth="false" layoutX="14.0" layoutY="41.0" prefHeight="700.0" prefWidth="600.0"
          styleClass="create_client_container_Vbox" AnchorPane.leftAnchor="14.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First Name:"/>
        <TextField fx:id="firstname_filed" prefHeight="26.0" prefWidth="163.0"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name:"/>
        <TextField fx:id="lastname_file" prefHeight="26.0" prefWidth="162.0"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password:"/>
        <TextField fx:id="password_filed" prefHeight="26.0" prefWidth="160.0"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Payee Address:"/>
        <CheckBox fx:id="pAddress_box" mnemonicParsing="false"/>
        <Label fx:id="pAddress_label" styleClass="payee_address_label" text="Label"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Accounts:"/>
        <CheckBox fx:id="check_acc_box" mnemonicParsing="false" text="Add Checking Account"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Checking Account Balance:"/>
        <TextField fx:id="check_amount_field"/>
        <CheckBox fx:id="save_acc_box" layoutX="10.0" layoutY="212.0" mnemonicParsing="false"
                  text="Add Savings Account"/>
        <Text layoutX="10.0" layoutY="241.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Savings Account Balance:"/>
        <TextField fx:id="save_amount_filed" layoutX="10.0" layoutY="244.0"/>
        <Button fx:id="create_client_button" mnemonicParsing="false" text="Create New Client"/>
        <Label fx:id="error_label" styleClass="error_label" text="error:"/>
    </VBox>
</AnchorPane>
